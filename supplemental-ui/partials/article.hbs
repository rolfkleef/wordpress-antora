<article class="doc">
{{#if page.attributes.wp-link}}
<div class="exampleblock">
  <div class="content">
    <p>Wordpress export: {{site.title}}, {{page.attributes.wp-export-date}}</p>
    <p>Page: <a href="{{{page.attributes.wp-link}}}" target="_blank">{{page.attributes.wp-link}}</a></p>
    <p>Author: {{page.author}}</p>
    <p>WP tags: {{page.attributes.wp-tags}}</p>
    <p>WP categories: {{page.attributes.wp-categories}}</p>
    <p>Keywords: {{page.keywords}}</p>
  </div>
</div>
{{/if}}
{{#with page.title}}
<h1 class="page">{{{this}}}</h1>
{{/with}}
{{{page.contents}}}
{{> pagination}}
</article>
